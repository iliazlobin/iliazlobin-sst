const arrayBufferToDataURL = (buffer: ArrayBuffer, type: string) => {
  let binary = ''
  const bytes = new Uint8Array(buffer)
  const len = bytes.byteLength
  for (let i = 0; i < len; i++) {
    const byte = bytes[i]
    if (byte !== undefined) {
      binary += String.fromCharCode(byte)
    }
  }
  return `data:${type};base64,${window.btoa(binary)}`
}

